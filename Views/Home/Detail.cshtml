@{
}

@model MovieDetail

<h3>@Model.title</h3>

<table class="table">
    <tr>
        <td>
            <img src="https://image.tmdb.org/t/p/w500/@Model.poster_path" style="max-width:200px;" />
        </td>
    </tr>
    <tr>
        <td>
            <b>Özet:</b> @Model.overview
        </td>
    </tr>
    <tr>
        <td>
            <b>Yayınlanma tarihi: </b> @Model.release_date.ToString("dd.MM.yyyy")
        </td>
    </tr>
    <tr>
        <td>
            <b>Süresi: </b> @Model.runtime dk
        </td>
    </tr>
    <tr>
        <td>
            <b>Oyuncular: </b>
            <table>
                @foreach (var cast in Model.Cast)
                {
                    <tr>
                        <td>
                            <img src="https://image.tmdb.org/t/p/w500/@cast.profile_path" style="max-width:100px;" />
                        </td>
                        <td>
                            @cast.name (@cast.character)
                        </td>
                    </tr>
                }
            </table>
        </td>
    </tr>
    <tr>
        <td>
            <a href="https://www.imdb.com/title/@Model.imdb_id" target="_blank">imdb linki</a>
        </td>
    </tr>
</table>